<div class="control-group">
  <%= f.label :title, :class => "control-label" %>
  <div class="controls">
	<%= f.text_field :title, :class=>"span8" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :body, :class => "control-label" %>
  <div class="controls">
	<%= f.text_area :body, :class => 'editor span8', :id => 'my_text_editor' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :week, :class => "control-label" %>
  <div class="controls">
	<%= f.collection_select(:week_id, Week.all, :id, :title, :prompt => true) %>
  </div>
</div>

<div class="control-group">
  <div class="controls">
	<label class="checkbox">
	  <%= f.check_box :featured %>Featured
	</label>
  </div>
</div>

<div class="control-group">
  <div class="controls">
	<label class="checkbox">
	  <%= check_box :mail, :flag %>Send email to group
	</label>
  </div>
</div>

<div class="actions control-group">
  <div class="controls">
	<span><%= f.submit :Create, :class =>"btn btn-primary" %></span>
  </div>
</div>

