<h1>Listing announcements</h1>

<p><%= link_to 'New', new_admin_announcement_path %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Instructor</th>
    <th>Featured</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @announcements.each do |announcement| %>
  <tr>
    <td><%= announcement.title %></td>
    <td><%= announcement.body %></td>
    <td><%= announcement.instructor_id %></td>
    <td><%= announcement.featured %></td>
    <td><%= announcement.status %></td>
    <td><%= link_to 'Show', admin_announcement_path(announcement) %></td>
    <td><%= link_to 'Edit', edit_admin_announcement_path(announcement) %></td>
    <td><%= link_to 'Destroy', admin_announcement_path(announcement), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

