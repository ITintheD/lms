<h1>Announcements</h1>

<% unless @featured.blank? %>
	<div class ="hero-unit-featured">
	  <h3>Featured Announcement</h3>
	  <%= render :partial => "announcement", :locals => { :announcement => @featured, :class_name => 'featured-item' } %>
	</div>
<% end %>

<br/>

<div class="list-items">
  <%= render :partial => "announcement", :collection => @announcements, :as => :announcement, :locals => { :class_name => 'list-item' } %>
</div>

