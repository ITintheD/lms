<!DOCTYPE html>
<html>
<head>
  <title>MiniLms</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <%= render :partial => '/layouts/navbar' %>
    <div class="row-fluid">
      <div class="span2" style="height: 600px; background-color: lightgrey;">
        <%= render :partial => '/layouts/leftnav' %>
      </div>
      <div class="span7">
        <%= yield %>
      </div>
      <div class="span3" style="height: 600px; background-color: lightgrey;">
        <%= render :partial => '/layouts/taskpane' %>
      </div>
    </div>
    <div class="row-fluid">
      <%= render :partial => '/layouts/footer' %>  
    </div>
  </div>
</body>
</html>
